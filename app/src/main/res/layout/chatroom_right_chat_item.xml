<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/right_chat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용내용"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@drawable/chat_right"
        />
    <TextView
        android:id="@+id/right_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:35"
        app:layout_constraintRight_toLeftOf="@id/right_chat_text"
        app:layout_constraintBottom_toBottomOf="@id/right_chat_text"
        android:layout_marginRight="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>