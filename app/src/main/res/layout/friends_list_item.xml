<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friends_list_recycler_profile_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_android_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:civ_border_width="2dp"
        app:civ_border_color="#7C000000"
        />

    <TextView
        android:id="@+id/friends_list_recycler_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진영"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/friends_list_recycler_profile_img"
        app:layout_constraintLeft_toRightOf="@id/friends_list_recycler_profile_img"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:id="@+id/friends_list_recycler_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요"
        app:layout_constraintTop_toBottomOf="@id/friends_list_recycler_profile_name"
        app:layout_constraintLeft_toLeftOf="@id/friends_list_recycler_profile_name"
        android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>