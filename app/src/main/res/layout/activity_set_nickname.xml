<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetNicknameActivity">

    <TextView
        android:id="@+id/nickname_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임 입력"
        android:textSize="36sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/nickname_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구들이 검색할 수 있도록 닉네임을 설정해주세요"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/nickname_tv1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/nickname_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_goneMarginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/nickname_tv2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/nickname_duplication_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중복확인"
        app:layout_constraintBaseline_toBaselineOf="@id/nickname_et"
        app:layout_constraintLeft_toRightOf="@id/nickname_et"/>

    <Button
        android:id="@+id/nickname_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="닉네임 결정"
        app:layout_constraintTop_toBottomOf="@id/nickname_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />







</androidx.constraintlayout.widget.ConstraintLayout>