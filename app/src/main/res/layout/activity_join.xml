<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity">

    <EditText
        android:id="@+id/join_email_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="이메일"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        />
    <EditText
        android:id="@+id/join_email_confirm_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="이메일"
        app:layout_constraintTop_toBottomOf="@id/join_email_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:id="@+id/join_email_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일치하지 않음"
        app:layout_constraintLeft_toRightOf="@id/join_email_confirm_et"
        app:layout_constraintBaseline_toBaselineOf="@id/join_email_confirm_et"
        android:layout_marginLeft="16dp"/>
    <EditText
        android:id="@+id/join_password_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="이메일"
        app:layout_constraintTop_toBottomOf="@id/join_email_confirm_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginTop="16dp"
        />

    <EditText
        android:id="@+id/join_password_confirm_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="이메일"
        app:layout_constraintTop_toBottomOf="@id/join_password_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginTop="16dp"
        />
        <TextView
            android:id="@+id/join_password_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일치하지 않음"
            app:layout_constraintLeft_toRightOf="@id/join_password_confirm_et"
            app:layout_constraintBaseline_toBaselineOf="@id/join_password_confirm_et"
            android:layout_marginLeft="16dp"
        />

    <Button
        android:id="@+id/join_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가입"
        app:layout_constraintTop_toBottomOf="@id/join_password_confirm_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/join_cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="취소"
        app:layout_constraintTop_toBottomOf="@id/join_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.gms.common.SignInButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/join_cancel_button"/>




</androidx.constraintlayout.widget.ConstraintLayout>